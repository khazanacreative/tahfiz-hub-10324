import type { FC, ReactElement, HTMLAttributes, ButtonHTMLAttributes } from 'react';

declare global {
  namespace JSX {
    interface Element extends ReactElement<any, any> { }
  }

  interface CommonProps {
    children?: React.ReactNode;
    className?: string;
  }

  interface RadixProps extends CommonProps {
    open?: boolean;
    onOpenChange?: (open: boolean) => void;
    asChild?: boolean;
  }
}

declare module '@radix-ui/react-dialog' {
  interface DialogRootProps extends RadixProps {}
  interface DialogTriggerProps extends RadixProps {}
  interface DialogContentProps extends RadixProps {}
  interface DialogHeaderProps extends RadixProps {}
  interface DialogTitleProps extends RadixProps {}

  export const Dialog: FC<DialogRootProps>;
  export const DialogTrigger: FC<DialogTriggerProps>;
  export const DialogContent: FC<DialogContentProps>;
  export const DialogHeader: FC<DialogHeaderProps>;
  export const DialogTitle: FC<DialogTitleProps>;
}

declare module '@radix-ui/react-popover' {
  interface PopoverRootProps extends RadixProps {}
  interface PopoverTriggerProps extends RadixProps {}
  interface PopoverContentProps extends RadixProps {
    align?: 'start' | 'center' | 'end';
  }

  export const Popover: FC<PopoverRootProps>;
  export const PopoverTrigger: FC<PopoverTriggerProps>;
  export const PopoverContent: FC<PopoverContentProps>;
}

declare module '@radix-ui/react-collapsible' {
  interface CollapsibleRootProps extends RadixProps {}
  interface CollapsibleTriggerProps extends RadixProps {}
  interface CollapsibleContentProps extends RadixProps {}

  export const Collapsible: FC<CollapsibleRootProps>;
  export const CollapsibleTrigger: FC<CollapsibleTriggerProps>;
  export const CollapsibleContent: FC<CollapsibleContentProps>;
}

declare module '@radix-ui/react-sheet' {
  interface SheetRootProps extends RadixProps {}
  interface SheetTriggerProps extends RadixProps {}
  interface SheetContentProps extends RadixProps {
    side?: 'top' | 'right' | 'bottom' | 'left';
  }

  export const Sheet: FC<SheetRootProps>;
  export const SheetTrigger: FC<SheetTriggerProps>;
  export const SheetContent: FC<SheetContentProps>;
}

declare module '@radix-ui/react-switch' {
  interface SwitchProps extends HTMLAttributes<HTMLButtonElement> {
    checked?: boolean;
    onCheckedChange?: (checked: boolean) => void;
  }

  export const Switch: FC<SwitchProps>;
}

declare module '@radix-ui/react-slider' {
  interface SliderProps extends HTMLAttributes<HTMLDivElement> {
    defaultValue?: number[];
    value?: number[];
    onValueChange?: (value: number[]) => void;
    min?: number;
    max?: number;
    step?: number;
  }

  export const Slider: FC<SliderProps>;
}

